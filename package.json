{
	"name": "@alexaegis/desktop-workspace",
	"displayName": "Minesweeper",
	"description": "Minesweeper Clone powered by Svelte and TinySlice",
	"version": "3.1.1",
	"license": "mit",
	"author": {
		"name": "Alex Aegis",
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/minesweeper",
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/minesweeper/issues"
	},
	"type": "module",
	"private": true,
	"workspaces": [
		"apps/*",
		"libs/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"start": "turbo run start --parallel",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"lint:es": "turbo run lint:es",
		"lint:svelte": "turbo run lint:svelte",
		"lint:css": "turbo run lint:css",
		"lint:scss": "turbo run lint:scss",
		"lint:md": "turbo run lint:md",
		"lint:rmd": "turbo run lint:rmd",
		"lint:format": "turbo run lint:format",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"ncu": "ncu --workspaces --root --upgrade",
		"nuke": "rimraf node_modules **/node_modules .turbo **/.turbo dist **/dist package-lock.json"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@sveltejs/vite-plugin-svelte": "^1.0.9",
		"@tinyslice/devtools-plugin": "^0.6.1",
		"@tinyslice/logger-plugin": "^0.6.1",
		"@tsconfig/svelte": "^3.0.0",
		"@vitest/coverage-c8": "^0.24.3",
		"concurrently": "^7.5.0",
		"eslint": "^8.26.0",
		"husky": "^8.0.1",
		"jest": "^29.2.2",
		"jsdom": "^20.0.1",
		"lint-staged": "^13.0.3",
		"markdownlint": "^0.26.2",
		"markdownlint-cli": "^0.32.2",
		"node-sass": "^7.0.3",
		"npm-check-updates": "^16.3.15",
		"nyc": "^15.1.0",
		"postcss-scss": "^4.0.5",
		"prettier": "^2.7.1",
		"remark": "^14.0.2",
		"remark-cli": "^11.0.0",
		"remark-lint": "^9.1.1",
		"remark-lint-maximum-line-length": "^3.1.2",
		"remark-preset-lint-consistent": "^5.1.1",
		"remark-preset-lint-recommended": "^6.1.2",
		"sass": "^1.55.0",
		"stylelint": "^14.14.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-prettier": "^2.0.0",
		"svelte": "^3.52.0",
		"svelte-check": "^2.9.2",
		"svelte-preprocess": "^4.10.7",
		"ts-jest": "^29.0.3",
		"tslib": "^2.4.0",
		"turbo": "1.5.*",
		"typescript": "^4.8.4",
		"vite": "^3.1.8",
		"vite-plugin-chunk-split": "^0.4.1",
		"vite-plugin-dts": "^1.6.6",
		"vite-plugin-static-copy": "^0.11.0",
		"vitest": "^0.24.3"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"packageManager": "npm@8.11.0"
}
