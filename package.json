{
	"name": "svelte-minesweeper",
	"displayName": "Minesweeper",
	"description": "Minesweeper Clone powered by Svelte and TinySlice",
	"version": "2.1.0",
	"license": "mit",
	"private": true,
	"author": {
		"name": "Alex Aegis",
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/svelte-minesweeper",
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/svelte-minesweeper/issues"
	},
	"type": "module",
	"scripts": {
		"start": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"test": "jest --passWithNoTests",
		"lint:es": "eslint --max-warnings=0 .",
		"lint:svelte": "svelte-check --tsconfig ./tsconfig.json",
		"lint:css": "stylelint --allow-empty-input ./**/*.css",
		"lint:scss": "stylelint --allow-empty-input ./**/*.scss",
		"lint:md": "markdownlint --ignore 'CHANGELOG.md' --ignore-path '.gitignore' .",
		"lint:rmd": "remark .",
		"lint:format": "prettier --check .",
		"nuke": "rimraf ./node_modules ./package-lock.json && npm install",
		"ci": "concurrently --timestamp-format \"HH:mm:ss.SSS\" --prefix-colors \"bgRed.black.dim,bgCyan.black.dim\" --prefix \"{name} {time} {pid}\" --names \"LINT,LINT:CSS,LINT:SCSS,LINT:MD,LINT:RMD,LINT:FORMAT,TEST,BUILD\" \"npm run lint\" \"npm run lint:css\" \"npm run lint:scss\" \"npm run lint:md\" \"npm run lint:rmd\" \"npm run lint:format\" \"npm run test\" \"npm run build\"",
		"ncu": "ncu -u",
		"format": "prettier --write .",
		"postinstall": "husky install",
		"prepublishOnly": "pinst --disable && npm run build",
		"postpublish": "pinst --enable"
	},
	"dependencies": {
		"@tinyslice/core": "^0.2.7",
		"@tinyslice/hydration-plugin": "^0.2.7",
		"98.css": "^0.1.18",
		"rxjs": "^7.5.7"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@sveltejs/vite-plugin-svelte": "^1.0.8",
		"@tinyslice/devtools-plugin": "^0.2.7",
		"@tsconfig/svelte": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"concurrently": "^7.4.0",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.1",
		"jest": "^29.1.2",
		"lint-staged": "^13.0.3",
		"markdownlint": "^0.26.2",
		"markdownlint-cli": "^0.32.2",
		"npm-check-updates": "^16.3.7",
		"nyc": "^15.1.0",
		"prettier": "^2.7.1",
		"remark": "^14.0.2",
		"remark-cli": "^11.0.0",
		"remark-lint": "^9.1.1",
		"remark-lint-maximum-line-length": "^3.1.2",
		"remark-preset-lint-consistent": "^5.1.1",
		"remark-preset-lint-recommended": "^6.1.2",
		"stylelint": "^14.13.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-prettier": "^2.0.0",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.1",
		"svelte-preprocess": "^4.10.7",
		"ts-jest": "^29.0.3",
		"tslib": "^2.4.0",
		"typescript": "^4.8.4",
		"vite": "^3.1.4",
		"vite-plugin-chunk-split": "^0.4.0"
	}
}
