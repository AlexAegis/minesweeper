{
	"name": "@alexaegis/desktop-workspace",
	"displayName": "Minesweeper",
	"description": "Minesweeper Clone powered by Svelte and TinySlice",
	"version": "3.1.1",
	"license": "mit",
	"private": true,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "Alex Aegis",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/minesweeper",
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/minesweeper/issues"
	},
	"keywords": [
		"actions",
		"cqrs",
		"effects",
		"javascript",
		"js",
		"minesweeper",
		"reactive",
		"rxjs",
		"tinyslice",
		"ts",
		"typescript"
	],
	"type": "module",
	"packageManager": "pnpm@8.2.0",
	"workspaces": [
		"apps/*",
		"libs/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build-lib_ build-app_ --concurrency 6 --cache-dir .cache/turbo",
		"build-lib": "turbo run build-lib_ --concurrency 6 --cache-dir .cache/turbo",
		"lint": "turbo run lint_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:format": "turbo run lint:format_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:format_": "prettier --check *.{json,ts,js,mjs,md,yml,yaml}",
		"lint:md": "turbo run lint:md_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:rmd": "turbo run lint:rmd",
		"lint:style": "turbo run lint:style_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:style:css": "turbo run lint:style:css_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:style:scss": "turbo run lint:style:scss_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:svelte": "turbo run lint:svelte",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --cache-dir .cache/turbo",
		"ce": "turbo run ce_ --concurrency 6 --cache-dir .cache/turbo",
		"format": "prettier --write .",
		"merge-coverage": "merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"ncu": "ncu --deep --peer --upgrade && pnpm up",
		"nuke": "nuke",
		"postinstall": "husky install",
		"release": "commit-and-tag-version --sign --commit-all",
		"release:major": "commit-and-tag-version --sign --commit-all --release-as major",
		"release:minor": "commit-and-tag-version --sign --commit-all --release-as minor",
		"release:patch": "commit-and-tag-version --sign --commit-all --release-as patch",
		"setup-all": "setup-prettier && setup-editorconfig && setup-husky && setup-git && setup-commitlint && setup-eslint && setup-github && setup-ts && setup-remark && setup-standard-version && setup-stylelint && setup-depcheck && setup-turbo && setup-vite && setup-vitest && setup-workspace",
		"start": "turbo run start --parallel",
		"test": "turbo run test_ --concurrency 6 --cache-dir .cache/turbo"
	},
	"devDependencies": {
		"@alexaegis/coverage-tools": "^0.1.3",
		"@alexaegis/eslint-config-core": "^0.1.7",
		"@alexaegis/nuke": "^0.1.7",
		"@alexaegis/setup-commitlint": "^0.1.7",
		"@alexaegis/setup-depcheck": "^0.1.7",
		"@alexaegis/setup-editorconfig": "^0.1.7",
		"@alexaegis/setup-eslint": "^0.1.7",
		"@alexaegis/setup-git": "^0.1.7",
		"@alexaegis/setup-github": "^0.1.7",
		"@alexaegis/setup-husky": "^0.1.7",
		"@alexaegis/setup-prettier": "^0.1.7",
		"@alexaegis/setup-remark": "^0.1.7",
		"@alexaegis/setup-standard-version": "^0.1.7",
		"@alexaegis/setup-stylelint": "^0.1.7",
		"@alexaegis/setup-ts": "^0.1.7",
		"@alexaegis/setup-turbo": "^0.1.7",
		"@alexaegis/setup-vite": "^0.1.7",
		"@alexaegis/setup-vitest": "^0.1.7",
		"@alexaegis/setup-vscode": "^0.1.7",
		"@alexaegis/setup-workspace": "^0.1.7",
		"@alexaegis/stylelint-config": "^0.1.7",
		"@alexaegis/ts": "^0.1.7",
		"@lcov-viewer/cli": "^1.3.0",
		"@types/eslint": "^8.37.0",
		"@vitest/coverage-c8": "^0.30.1",
		"commit-and-tag-version": "^11.2.1",
		"commitlint": "^17.5.1",
		"depcheck": "^1.4.3",
		"eslint": "^8.38.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"npm-check-updates": "^16.10.8",
		"postcss-scss": "^4.0.6",
		"prettier": "^2.8.7",
		"remark-cli": "^11.0.0",
		"stylelint": "15.4.0",
		"ts-node": "^10.9.1",
		"turbo": "^1.9.1",
		"typescript": "^5.0.4"
	}
}
