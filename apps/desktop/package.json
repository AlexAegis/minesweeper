{
	"name": "@alexaegis/desktop",
	"description": "a windows 95 style desktop environment for the browser",
	"version": "4.1.0",
	"archetype": {
		"platform": "web",
		"framework": "sveltekit",
		"language": "ts",
		"kind": "app"
	},
	"keywords": [
		"98.css",
		"managed-by-autotool",
		"svelte",
		"sveltekit"
	],
	"type": "module",
	"scripts": {
		"build": "turbo run build-app_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"build-app_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:md_": "remark --frail --no-stdout --silently-ignore .",
		"lint:style": "turbo run lint:style_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:style:css": "turbo run lint:style:css_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:style:css_": "stylelint --cache true --cache-strategy content --cache-location .cache/stylelintcache-css --allow-empty-input '**/*.css'",
		"lint:style:html": "turbo run lint:style:html_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:style:html_": "stylelint --customSyntax=postcss-html --cache true --cache-strategy content --cache-location .cache/stylelintcache-html --allow-empty-input '**/*.{html,svelte,vue,astro,xml,php}'",
		"lint:style:scss": "turbo run lint:style:scss_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:style:scss_": "stylelint --customSyntax=postcss-scss --cache true --cache-strategy content --cache-location .cache/stylelintcache-scss --allow-empty-input '**/*.scss'",
		"lint:svelte": "turbo run lint:svelte_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:svelte_": "svelte-check --tsconfig ./tsconfig.json",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:tsc_": "tsc --noEmit",
		"all": "BUILD_REASON='publish' turbo run all_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"dev": "concurrently npm:watch-deps npm:start",
		"format": "turbo run format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --write .",
		"kit:sync": "svelte-kit sync",
		"postinstall": "svelte-kit sync # pakk:not-distributed",
		"preview": "vite preview",
		"start": "TARGET_ENV='local' vite",
		"test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage",
		"watch-deps": "TARGET_ENV='local' nodemon --config ../../node_modules/@alexaegis/autotool-plugin-vite/static/nodemon.json --watch ./node_modules/**/src/**/* --ext ts,tsx,mts,cts,svelte,js,jsx,mjs,cjs,json --ignore dist --exec 'turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/desktop'"
	},
	"dependencies": {
		"@alexaegis/common": "^0.5.1",
		"@alexaegis/desktop-common": "^4.1.0",
		"@alexaegis/w2k": "workspace:^",
		"@testing-library/svelte": "^4.0.3",
		"@tinyslice/core": "^0.8.0",
		"@tinyslice/hydration-plugin": "^0.8.0",
		"@tinyslice/logger-plugin": "^0.8.0",
		"98.css": "^0.1.20",
		"interactjs": "^1.10.17",
		"normalize.css": "^8.0.1",
		"rxjs": "^7.8.1",
		"svelte": "^4.1.1",
		"svelte-rxjs-observer": "^0.5.0"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-svelte": "^0.6.1",
		"@alexaegis/eslint-config-vitest": "^0.6.1",
		"@alexaegis/prettier-config": "^0.6.1",
		"@alexaegis/prettier-config-svelte": "^0.5.4",
		"@alexaegis/stylelint-config": "^0.6.1",
		"@alexaegis/svelte-config": "^0.6.1",
		"@alexaegis/ts": "^0.6.1",
		"@alexaegis/vite": "^0.6.1",
		"@alexaegis/vitest": "^0.6.1",
		"@interactjs/types": "^1.10.17",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/adapter-vercel": "^3.0.2",
		"@sveltejs/kit": "^1.22.3",
		"@tinyslice/devtools-plugin": "^0.8.0",
		"@tsconfig/svelte": "^5.0.0",
		"@types/node": "^20.4.5",
		"concurrently": "^8.2.0",
		"nodemon": "^3.0.1",
		"stylelint": "^15.10.2",
		"svelte": "^4.1.1",
		"svelte-check": "^3.4.6",
		"svelte-preprocess": "^5.0.4",
		"vite": "^4.4.7",
		"vite-plugin-preload": "^0.3.1",
		"vitest": "^0.33.0"
	}
}
