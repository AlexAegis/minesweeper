{
	"name": "@w2k/desktop-app",
	"description": "a windows 95 style desktop environment for the browser",
	"version": "4.1.0",
	"archetype": {
		"platform": "web",
		"framework": "sveltekit",
		"language": "ts",
		"kind": "app"
	},
	"keywords": [
		"98.css",
		"managed-by-autotool",
		"svelte",
		"sveltekit"
	],
	"type": "module",
	"scripts": {
		"lint:es": "turbo run lint:es_ --concurrency 16 --filter @w2k/desktop-app",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 16 --filter @w2k/desktop-app",
		"lint:format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16 --filter @w2k/desktop-app",
		"lint:md_": "remark --frail --no-stdout --silently-ignore .",
		"lint:style": "turbo run lint:style_ --concurrency 16 --filter @w2k/desktop-app",
		"lint:style:css": "turbo run lint:style:css_ --concurrency 16 --filter @w2k/desktop-app",
		"lint:style:css_": "stylelint --cache true --cache-strategy content --cache-location .cache/stylelintcache-css --allow-empty-input '**/*.css'",
		"lint:style:html": "turbo run lint:style:html_ --concurrency 16 --filter @w2k/desktop-app",
		"lint:style:html_": "stylelint --customSyntax=postcss-html --cache true --cache-strategy content --cache-location .cache/stylelintcache-html --allow-empty-input '**/*.{html,svelte,vue,astro,xml,php}'",
		"lint:style:scss": "turbo run lint:style:scss_ --concurrency 16 --filter @w2k/desktop-app",
		"lint:style:scss_": "stylelint --customSyntax=postcss-scss --cache true --cache-strategy content --cache-location .cache/stylelintcache-scss --allow-empty-input '**/*.scss'",
		"lint:svelte": "turbo run lint:svelte_ --concurrency 16 --filter @w2k/desktop-app",
		"lint:svelte_": "svelte-check --tsconfig ./tsconfig.json",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --filter @w2k/desktop-app",
		"lint:tsc_": "tsc --noEmit",
		"test": "turbo run test_ --concurrency 16 --filter @w2k/desktop-app",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage",
		"all": "BUILD_REASON='publish' turbo run all_ --concurrency 16 --filter @w2k/desktop-app",
		"build": "turbo run build-app_ --concurrency 16 --filter @w2k/desktop-app",
		"build-app_": "vite build",
		"build:dependencies": "TARGET_ENV='local' turbo run build-lib_ --concurrency 16 --filter @w2k/desktop-app # used by turbowatch",
		"dev": "turbowatch dev.js",
		"dev_": "TARGET_ENV='local' vite",
		"format": "turbo run format_ --concurrency 16 --filter @w2k/desktop-app",
		"format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --write .",
		"kit:sync": "svelte-kit sync",
		"postinstall": "svelte-kit sync # pakk:not-distributed",
		"preview": "vite preview",
		"start": "turbo run start_ --concurrency 16 --filter @w2k/desktop-app",
		"start_": "TARGET_ENV='local' vite",
		"watch-deps": "TARGET_ENV='local' turbowatch turbowatch.ts"
	},
	"dependencies": {
		"@alexaegis/common": "^0.10.1",
		"@testing-library/svelte": "^5.2.4",
		"@tinyslice/core": "^0.8.3",
		"@tinyslice/hydration-plugin": "^0.8.3",
		"@tinyslice/logger-plugin": "^0.8.3",
		"@w2k/common": "workspace:^4.1.0",
		"@w2k/core": "workspace:^",
		"@w2k/css": "workspace:^",
		"@w2k/display-properties": "workspace:^",
		"@w2k/minesweeper": "workspace:^",
		"@w2k/ui": "workspace:^",
		"98.css": "^0.1.20",
		"normalize.css": "^8.0.1",
		"rxjs": "^7.8.1",
		"svelte": "^5.1.3",
		"svelte-rxjs-observer": "^0.5.3"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-svelte": "^0.11.6",
		"@alexaegis/eslint-config-vitest": "^0.11.6",
		"@alexaegis/prettier-config": "^0.11.6",
		"@alexaegis/prettier-config-svelte": "^0.5.4",
		"@alexaegis/stylelint-config": "^0.11.6",
		"@alexaegis/svelte-config": "^0.11.6",
		"@alexaegis/ts": "^0.11.6",
		"@alexaegis/turbowatch": "^0.11.6",
		"@alexaegis/vite": "^0.11.6",
		"@alexaegis/vitest": "^0.11.6",
		"@alexaegis/workspace-tools": "^0.10.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/adapter-vercel": "^5.4.6",
		"@sveltejs/kit": "^2.7.3",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tinyslice/devtools-plugin": "^0.8.3",
		"@tsconfig/svelte": "^5.0.4",
		"@types/node": "^22.8.1",
		"concurrently": "^9.0.1",
		"nodemon": "^3.1.7",
		"stylelint": "^16.10.0",
		"svelte": "^5.1.3",
		"svelte-check": "^4.0.5",
		"svelte-preprocess": "^6.0.3",
		"turbowatch": "^2.29.4",
		"vite": "^5.4.10",
		"vite-plugin-preload": "^0.4.2",
		"vitest": "^2.1.3"
	}
}
