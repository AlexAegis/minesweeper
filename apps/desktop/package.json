{
	"name": "@alexaegis/desktop",
	"version": "3.1.1",
	"keywords": [
		"@alexaegis/setup-depcheck",
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-stylelint",
		"@alexaegis/setup-ts-svelte",
		"@alexaegis/setup-vite-svelte",
		"@alexaegis/setup-vitest-web",
		"svelte"
	],
	"type": "module",
	"main": "src/main.ts",
	"scripts": {
		"build": "turbo run build-app_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"build-app_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:style": "turbo run lint:style_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:style:css": "turbo run lint:style:css_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:style:css_": "stylelint --cache true --cache-strategy content --cache-location .cache/stylelintcache-css ./**/*.css",
		"lint:style:scss": "turbo run lint:style:scss_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:style:scss_": "stylelint --customSyntax=postcss-scss --cache true --cache-strategy content --cache-location .cache/stylelintcache-scss ./**/*.scss",
		"lint:svelte": "svelte-check --tsconfig ./tsconfig.json",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"lint:tsc_": "tsc --noEmit",
		"dev": "concurrently npm:watch-deps npm:start",
		"format": "prettier --write .",
		"preview": "vite preview",
		"start": "vite",
		"test": "turbo run test_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage",
		"watch-deps": "nodemon --config ../../node_modules/@alexaegis/setup-vite/static/nodemon.json --watch ./node_modules/**/src/**/* --ext ts,tsx,mts,cts,svelte,js,jsx,mjs,cjs,json --ignore dist --exec 'turbo run build-lib_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/desktop'"
	},
	"dependencies": {
		"@alexaegis/desktop-common": "^3.1.1",
		"@testing-library/svelte": "^3.2.2",
		"@tinyslice/core": "^0.7.0",
		"@tinyslice/hydration-plugin": "^0.7.0",
		"@tinyslice/logger-plugin": "^0.7.0",
		"98.css": "^0.1.20",
		"interactjs": "^1.10.17",
		"normalize.css": "^8.0.1",
		"rxjs": "^7.8.0",
		"svelte": "^3.58.0",
		"svelte-rxjs-observer": "^0.3.0"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.1.8",
		"@alexaegis/stylelint-config": "^0.1.8",
		"@alexaegis/ts": "^0.1.8",
		"@alexaegis/vite": "^0.1.8",
		"@alexaegis/vitest": "^0.1.8",
		"@interactjs/types": "^1.10.17",
		"@tinyslice/devtools-plugin": "^0.7.0",
		"@tsconfig/svelte": "^4.0.1",
		"@types/node": "^18.15.11",
		"concurrently": "^8.0.1",
		"nodemon": "^2.0.22",
		"postcss-scss": "^4.0.6",
		"stylelint": "^15.5.0",
		"svelte-preprocess": "^5.0.3",
		"vite": "^4.2.1",
		"vitest": "^0.30.1"
	}
}
